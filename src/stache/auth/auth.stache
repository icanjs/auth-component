<can-import from="auth-component/auth/auth.less"/>

{{#switch ui}}
	{{#case 'compact'}}
		<auth-ui {base-url}="baseUrl"
			{oauth-flow}="oauthFlow"
			{(subpage)}="subpage"
			{popup-width}="popupWidth"
			{popup-height}="popupHeight"
			{providers}="providerMap">
			<content></content>
		</auth-ui>
	{{/case}}

	{{#case 'wide'}}
		<!-- Wide mode not yet implemented. -->
	{{/case}}

	{{#default}}
		<content></content>
	{{/default}}
{{/switch}}
